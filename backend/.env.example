# Django (Render will set these as environment variables)
# Settings supports both DJANGO_* and the shorter aliases (SECRET_KEY/DEBUG/ALLOWED_HOSTS)
DJANGO_SECRET_KEY=
DJANGO_DEBUG=False
DJANGO_ALLOWED_HOSTS=localhost,127.0.0.1

SECRET_KEY=
DEBUG=False
ALLOWED_HOSTS=
DJANGO_TIME_ZONE=UTC

# Supabase Postgres (example)
# DATABASE_URL=postgresql://postgres:<YOUR-PASSWORD>@db.onskofgzsgjgmexdroex.supabase.co:5432/postgres
# Note: some Supabase db.* hosts can be IPv6-only. If your network is IPv4-only,
# use the Supabase "Connection pooling" URI from the dashboard (often port 6543)
# and include `?sslmode=require`.
DATABASE_URL=
DATABASE_SSL_REQUIRE=true
DATABASE_CONN_MAX_AGE=600

# Supabase Storage (KYC)
SUPABASE_URL=
SUPABASE_SERVICE_ROLE_KEY=
SUPABASE_BUCKET_NAME=kyc-documents

# CORS
CORS_ALLOWED_ORIGINS=http://localhost:3000,http://127.0.0.1:3000
CORS_ALLOW_ALL_ORIGINS=true
CORS_ALLOW_CREDENTIALS=false

# CSRF (only needed if using cookie-based auth)
CSRF_TRUSTED_ORIGINS=

# DRF
DRF_PAGE_SIZE=20

# Admin bootstrap (non-interactive)
# Set these and run: python manage.py bootstrap_admin
DJANGO_ADMIN_PHONE=9999999999
DJANGO_ADMIN_NAME=Admin
DJANGO_ADMIN_PASSWORD=change-me
